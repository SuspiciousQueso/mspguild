[Unit]
Description=BaldwinIT Docker Compose stack
After=docker.service
Requires=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/var/www/baldwinit
ExecStart=/usr/bin/docker compose up -d --build
ExecStop=/usr/bin/docker compose down
TimeoutStartSec=300
TimeoutStopSec=300

[Install]
WantedBy=multi-user.target
